<% if (locals.alert) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>

<% if (locals.success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
<% } %>

  <div class="col-3">
    <form method="POST" action="/create_keyword">
      <div class="row">
        <h4>Create a new keyword!</h4>
          <div class="form-group">
              <input type="text" class="form-control" id="keyword" name="keyword" placeholder="Enter Keyword">
            </div>
      </div>
      <div class="row">
          <div class="form-group">
            <select name="mapping" class="custom-select">
              <option selected disabled>Mapping</option>
              <option value="blist">blist</option>
              <option value="nlist">nlist</option>
              <option value="item">item</option>
              <option value="endblist">endblist</option>
              <option value="endnlist">endnlist</option>
              <option value="$">$</option>
              <option value="$$">$$</option>

            </select>
          </div>
      </div>
      <button type="submit" class="btn btn-primary">Create!</button>    
    </form>
  </div>

  <div class="col-5">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Keyword</th>
          <th scope="col">Mapping</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < keywords.length; i++) { %>
          <tr>
              <td><%= keywords[i].keyword %> </td>
              <td><%= keywords[i].mapping %></td>
              <td><a href=<%= "/delete_keyword/" + keywords[i].id%> >Delete</td>
            </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
